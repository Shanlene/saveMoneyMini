/* pages/detail/detail.wxss */
.order-detail {
    padding: 20rpx 0;
    font-size: 14px;
    
    border-top: solid 12rpx #f2f2f2;
}

.order-container,
.author,
.order-comments {
    margin-bottom: -8 rpx;
    padding: 10rpx 20rpx 8rpx ;
    background-color: #fff;
}

.order-container {
    padding-bottom: 20rpx;
    border-bottom: solid 12rpx #f2f2f2;
}

.author-avatar {
  float: left;
  width: 64rpx;
  height: 64rpx;
  border-radius: 10%;
}

.author-info {
  float: left;
  width: 200px;
  margin-left: 10px;
  line-height: 120%;
}

.author {
    
    overflow: hidden;
}

.order-title {
    font-weight: bold;
    font-size: 18px;
    margin: 20rpx 0;
    color: #555;
}

.order-content {
    margin: 40rpx 0;
    border-radius: 5px;
    color: #666;
}

.order-description {
    margin: 30rpx 0;
    color: #666;
}

.piuctures-container {
    overflow: hidden;
}

.content-picture {
    float: left;
    width: 230rpx;
    height: 230rpx;
    margin-left: 5rpx;
    padding: 10rpx 10rpx;
}

.order-comments {
    margin-bottom: 120rpx;
}

.order-comment {
    padding-bottom: 8rpx;
    margin-top: 10rpx;
    border-bottom: solid 1px #ccc;
}

.order-comment .comment-str {
    margin-left: 100rpx;
    margin-bottom: 10rpx;
    margin-top: -20 rpx;
    font-size: 36 rpx;
    word-break:break-all;
    width: 82%;
}

.tool-bar {
    width: 100%;
    height: 80rpx;
    position: fixed;
    bottom: 0;
    padding: 20rpx;
    /* background-color: #f2f2f2; */
    background-color: white;
    overflow: hidden;
    border-top: solid 2rpx #e5e5e5;
}

.tool-bar .comment-input {
    box-sizing: border-box;
    float: left;
    height: 80rpx;
    width: 50%;
    border-radius: 3px;
    padding-left: 20rpx;
    line-height: 100%;
    border: solid 1px #999;
}

.tool-bar .comment-submit,
.join-tool {
    float: left;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    width: 20%;
    margin-left: 18rpx;
    border-radius: 3px;
    background-color: #efb336;
    /*border: fid 1px #4eaa4c;*/
}

.join-tool {
    margin-left: 18rpx;
    text-align: center;
    background-color: #ff4400;
    color: #fff;
}

.QRCode-container {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.2);
}

.QRCode-container .QRCode-box {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400rpx;
  /*height: 460rpx;*/
  border-radius: 10rpx;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 40rpx 0 0;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
}

.QRCImag-container {
  margin-top: 20rpx;
  border-top: solid 2rpx #e5e5e5;
  background-color: #f6f6f8;
  border-radius: 0 0 10rpx 10rpx;
}

.QRCode-show {
  width: 280rpx;
  height: 280rpx;
  margin: 50rpx 0;
}

.post-time {
    font-size: 12 px;
    color: #666;
}
.author-name{
    font-size: 12 px;
    color: #666;
}