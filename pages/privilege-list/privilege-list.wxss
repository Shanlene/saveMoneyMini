.location-info {
   /* Box-model */
  height: 30px;
  padding-left: 20px;
  margin-bottom: 7px;

  /*Typography*/
  line-height: 30px;

  /* Visual */
  background: url(data:image/png;base64,) 2px no-repeat #fff;
  border: solid #e5e5e5;
  border-width: 1px 0;
}

.dis_item {
  margin-bottom: 14rpx;
  padding: 15rpx;
  overflow: hidden;
  background-color: #fff;
  border: solid #e5e5e5;
  border-width: 1px 0;
  position: relative;
 
}
.author-all
{
  margin-bottom: 20rpx;
  overflow: hidden;
  border-bottom: 1px solid #F7c968;
}
.author-avatar {
  float: left;
  width: 64rpx;
  height: 64rpx;
  border-radius: 10%;

}

.author-info {
  float: left;
  width: 200px;
  margin-left: 10px;
  margin-bottom: 3px;
}
.post-time{
  color: #777272cc;
}
 
.content-container {
  clear: both;
  overflow: hidden;
  margin-right: 10px;

}
.content-container .content-picture {
  float: left;
  width: 192rpx;
  height: 198rpx;
  

}
 

.content-container .content-text {
  float: left;
  width: calc(100% - 230rpx);
  height: 198rpx;
  margin-left: 38rpx;
  color: #666;
  overflow: hidden;
  line-height: 40rpx;
}

 

.content-text .content {
  height: 155rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  margin-bottom: 5px;
}

.content-container .detail{
   float: right;
   line-height: 35rpx;
}
.content-container .button {
  float: left;
  margin-top: 12rpx;
  /*border: solid 1px #999;*/
}

.content-container .button .button-item {
  float: left;
  width: 235rpx;
  height: 26px;
  line-height: 26px;
  text-align: center;
}

.button-item:not(:last-child) {
  border-right: solid 1px #ccc;
}

 


 

.post-button {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;

  width: 32px;
  height: 32px;
  
  /*border: solid 1px black;*/
  background: url(data:image/png;base64,) no-repeat;
}

.manageOrder{
  position:absolute;
  right:10px;
  width:52px;
  text-align: center;
}
.manageOrder .manage-img{
  width:30px;
  height:25px;
}
.manageOrder .manage-item{
  background-color: #e5e5e5;
  border:1px solid #ccc;
  padding:3px 10px;
}
 