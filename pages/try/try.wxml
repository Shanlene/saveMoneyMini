<block>
  <view class="page" data-weui-theme="{{theme}}">
    <view class="page__hd">
      <view class="page__title">SearchBar</view>
      <view class="page__desc">搜索栏</view>
    </view>
    <view class="page__bd">
      <view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
        <form class="weui-search-bar__form">
          <view class="weui-search-bar__box">
            <i class="weui-icon-search"></i>
                      <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" bindconfirm="searchConfirm" />
                      <span class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput"></span>
          </view>
          <label class="weui-search-bar__label" bindtap="showInput">
            <i class="weui-icon-search"></i>
                      <span class="weui-search-bar__text">搜索</span>
          </label>
        </form>
              <view class="weui-search-bar__cancel-btn" bindtap="hideInput">取消</view>
      </view>
      <view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0}}">
      </view>
    </view>
  </view>
</block>
<navigator url="/pages/post/post" hover-class="navigator-hover">跳转到新页面</navigator>
<!-- 导航栏 -->
<view>
  <navigator url="/pages/post/post" open-type="navigate" 
            hover-class="navigator-hover" > 试试 </navigator>
  <block wx:for="{{categoryList}}" wx:key="item">
  <swiper-item>
  <block wx:for="{{item}}" wx:key="item">
    <view class="category-info">
      <navigator url="{{item.url}}" open-type="navigate" 
                 hover-class="other-navigator-hover" 
                 bindtap="tapnavigator"
                 data-id="{{item.id}}">
        <image src="{{item.src}}" 
        class="category-image"></image>
        <view class="category-text">{{item.name}}</view>
      </navigator>
    </view>
  </block>

  <!-- 查看图片 -->
<!--pages/image/image.wxml-->
<view class='imgList'>
  <view class='imgList-li' wx:for='{{imgArr}}'>
    <image class='img' src='{{item}}' data-index='{{index}}' bindtap='previewImg'></image>
  </view>
  </view>

  </swiper-item>

  </block>
</view>


