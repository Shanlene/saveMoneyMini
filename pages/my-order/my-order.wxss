.location-info {
   /* Box-model */
  height: 30px;
  padding-left: 20px;
  margin-bottom: 7px;

  /*Typography*/
  line-height: 30px;

  /* Visual */
  background: url(data:image/png;base64,) 2px no-repeat #fff;
  border: solid #e5e5e5;
  border-width: 1px 0;
}

.order-item {
  margin-bottom: 14rpx;
  padding: 15rpx 15rpx 0;
  overflow: hidden;
  background-color: #fff;
  border: solid #e5e5e5;
  border-width: 1px 0;
  position: relative;
}

.author-avatar {
  float: left;
  width: 64rpx;
  height: 64rpx;
  border-radius: 10%;
}

.author-info {
  float: left;
  width: 200px;
  margin-left: 10px;
  margin-bottom: 10px;
}

.content-container {
  clear: both;
  overflow: hidden;
}

.content-container .content-picture {
  float: left;
  width: 192rpx;
  height: 192rpx;
  margin-bottom: 30rpx;
}

.content-container .content-text {
  float: left;
  width: calc(100% - 230rpx);
  height: 192rpx;
  margin-left: 38rpx;
  color: #666;
  overflow: hidden;
}

.content-text .title {
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 22rpx;

  font-size: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.content-text .content {
  height: 120rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.content-container  .button-item {
  float: left;
  width: 235rpx;
  height: 26px;
  line-height: 26px;
  text-align: center;
}

.button-item{
  border-right: solid 1px #ccc;
  font-size: 10px;
  width: 100%;
  height: 80rpx;
  position: fixed;
  padding: 20rpx;
  background-color: white;
  border-top: solid 2rpx #e5e5e5;
}

.button-item.thumbs-up {
  background:  #F7c968 no-repeat 30rpx 5px;
}

.button-item.comment {
  background:  #F7c968 no-repeat 30rpx 5px;
}

.button-item.join {
  background:  #F7c968 no-repeat 30rpx 5px;
}



